<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text"><?php echo $title; ?></title>
    <subtitle type="html"><?php echo $description; ?></subtitle>
    <id><?php echo $url; ?></id>
    <link rel="alternate" type="text/html" hreflang="en" href="<?php echo $url; ?>"/>
    <link rel="self" type="application/atom+xml" href="<?php echo $self_url; ?>"/>
    <updated><?php $item=end($items); echo date("Y-m-d\TH:i:sP",$item->date);?></updated>
    <generator uri="<?php echo $app_url; ?>" version="1.0">social2atom</generator>
    <?php foreach($items as $item): ?>
    <entry>
        <id><?php echo $url.'?w=wall'.$item->from_id.'_'.$item->id; ?></id>
        <title type="html"><![CDATA[<?php echo ($item->title) ? $item->title : 'No title available'; ?>]]></title>
        <updated><?php echo date("Y-m-d\TH:i:sP",$item->date); ?></updated>
        <link rel="alternate" type="text/html" href="<?php echo $url.'?w=wall'.$item->from_id.'_'.$item->id; ?>"/>
        <author>
            <name><![CDATA[<?php echo $item->author; ?>]]></name>
        </author>
        <content type="html"><![CDATA[<?php echo $item->text; ?>]]></content>
    </entry>
    <?php endforeach; ?>
</feed>
