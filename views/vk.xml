<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text"><?php echo $feed['title']; ?></title>
    <subtitle type="html"><?php echo $feed['description']; ?></subtitle>
    <id><?php echo $feed['self_url']; ?></id>
    <link rel="alternate" type="text/html" hreflang="en" href="<?php echo $feed['origin_url']; ?>"/>
    <link rel="self" type="application/atom+xml" href="<?php echo $feed['self_url']; ?>"/>
    <?php if(count($items)): ?>
        <updated><?php $item=array_values($items)[0]; echo $item->date;?></updated>
    <?php endif; ?>
    <generator uri="<?php echo $feed['app_url']; ?>" version="1.0">social2atom</generator>
    <?php foreach($items as $item): ?>
    <entry>
        <id><?php echo $feed['origin_url'].'?w=wall'.$item->from_id.'_'.$item->id; ?></id>
        <title type="html"><![CDATA[<?php echo ($item->title) ? $item->title : 'No title available'; ?>]]></title>
        <updated><?php echo $item->date; ?></updated>
        <link rel="alternate" type="text/html" href="<?php echo $feed['origin_url'].'?w=wall'.$item->from_id.'_'.$item->id; ?>"/>
        <author>
            <name><![CDATA[<?php echo $item->author; ?>]]></name>
        </author>
        <content type="html"><![CDATA[<?php echo $item->text; ?>]]></content>
    </entry>
    <?php endforeach; ?>
</feed>
